{
  //--- Editor ---
  "editor": {
    "autoIndent": "advanced",
    "codeActionsOnSave": {
      "source.organizeImports": true
    },
    "cursorBlinking": "phase",
    "dragAndDrop": true,
    "fontFamily": "'JetBrains Mono', 'Fira Code', Hack",
    "fontLigatures": true,
    "fontSize": 14,
    "formatOnPaste": true,
    "formatOnSave": true,
    "minimap": {
      "enabled": true,
      "renderCharacters": false
    },
    "renderIndentGuides": true,
    "renderWhitespace": "boundary",
    "rulers": [
      80,
      120
    ],
    "smoothScrolling": true,
    "suggestSelection": "first",
    "tabCompletion": "on",
    "tabSize": 4,
    "wordWrap": "on",
    "wordWrapColumn": 80
  },
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  // --- GitLens ---
  "gitlens": {
    "advanced.messages": {
      "suppressCommitHasNoPreviousCommitWarning": false,
      "suppressCommitNotFoundWarning": false,
      "suppressFileNotUnderSourceControlWarning": false,
      "suppressGitVersionWarning": false,
      "suppressLineUncommittedWarning": false,
      "suppressNoRepositoryWarning": false,
      "suppressResultsExplorerNotice": false,
      "suppressShowKeyBindingsNotice": true,
      "suppressUpdateNotice": true,
      "suppressWelcomeNotic": true
    },
    "blame": {
      "ignoreWhitespace": true
    },
    "codelens": {
      "authors.enabled": false,
      "scopes": [
        "document"
      ]
    },
    "hovers.currentLine.over": "line",
    "historyExplorer.enabled": true,
    "keymap": "none"
  },
  // --- Golang ---
  "go": {
    "alternateTools": {
      "go-langserver": "gopls"
    },
    "autocompleteUnimportedPackages": true,
    "buildFlags": [
      "-v"
    ],
    "coverageDecorator": {
      "type": "gutter"
    },
    "coverOnSave": true,
    "coverOnSingleTest": true,
    "enableCodeLens": {
      "references": false,
      "runtest": true
    },
    "formatTool": "goimports",
    "languageServerExperimentalFeatures": {
      "autoComplete": true,
      "format": true
    },
    "lintTool": "golangci-lint",
    "lintFlags": [
      "--fast",
      "--tests",
      "--vendor"
    ],
    "liveErrors": {
      "enabled": true,
      "delay": 500
    },
    "testTimeout": "5m",
    "useCodeSnippetsOnFunctionSuggest": true,
    "useLanguageServer": true
  },
  "rust.all_features": true,
  "rust.build_on_save": true,
  "search.exclude": {
    ".git": true,
    "bower_components": true,
    "node_modules": true
  },
  "search.showLineNumbers": true,
  "search.useGlobalIgnoreFiles": true,
  //--- Integrated Terminal ---
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "Hack",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "window.restoreFullscreen": true,
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Dracula Soft",
  "workbench.fontAliasing": "auto",
  "workbench.startupEditor": "none",
  "workbench.statusBar.feedback.visible": false,
  "workbench.iconTheme": "vscode-icons"
}